mixin pagination(pagination)
  nav.d-flex
    ul(class="pagination" style = "display: flex; flex-wrap: wrap; justify-content: center; margin-bottom: 4px;")

      if(pagination.currentPage > 1)
        li(class="page-item" style = "margin-bottom: 4px;")
          button(class="page-link" button-pagination=pagination.currentPage - 1)
            span(aria-hidden='true' style = 'font-size: 14px') «
      else
        li(class="page-item" style = "margin-bottom: 4px;")
          button(class="page-link" button-pagination=pagination.currentPage)
            span(aria-hidden='true' style = 'font-size: 14px') «

      li(class=`page-item ${pagination.currentPage == 1 ? "active" : ""}` style = "margin-bottom: 4px;")
        button(class="page-link" button-pagination=1) 1
      
      if(pagination.currentPage > 3)
        li(class="page-item" style = "margin-bottom: 4px;")
          span(class="page-link") ...

      - var startPage = Math.max(2, pagination.currentPage - 1)
      - var endPage = Math.min(pagination.totalPages - 1, pagination.currentPage + 1)
      - for(var i = startPage; i <= endPage; i++)
        li(class=`page-item ${pagination.currentPage == i ? "active" : ""}` style = "margin-bottom: 4px;")
          button(class="page-link" button-pagination=i) #{i}

      if(pagination.currentPage < pagination.totalPages - 2)
        li(class="page-item" style = "margin-bottom: 4px;")
          span(class="page-link") ...

      if(pagination.totalPages > 1)
        li(class=`page-item ${pagination.currentPage == pagination.totalPages ? "active" : ""}` style = "margin-bottom: 4px;")
          button(class="page-link" button-pagination=pagination.totalPages) #{pagination.totalPages}

      if(pagination.currentPage < pagination.totalPages)
        li(class="page-item" style = "margin-bottom: 4px;")
          button(class="page-link" button-pagination=pagination.currentPage + 1)
            span(aria-hidden='true' style = 'font-size: 14px') »
      else
        li(class="page-item" style = "margin-bottom: 4px;")
          button(class="page-link" button-pagination=pagination.currentPage)
            span(aria-hidden='true' style = 'font-size: 14px') »
            