        label.switch(style="margin-right: 40px;")
          input#time-toggle(type="checkbox" style=" background-color: #c32b2b;" checked)
          span.slider.round
  .test-list
    if (tests === null)
      p Không có bài thi nào
    else
      each test in tests
        +testMixin(test)
